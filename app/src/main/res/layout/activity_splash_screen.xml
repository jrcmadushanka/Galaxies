<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.2"
            android:rotation="180"
            android:scaleType="fitStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/space_image" />

        <ImageView
            android:id="@+id/ivPlanet"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:alpha="0"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/galaxy_logo" />

        <ImageView
            android:id="@+id/ivGalaxyText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@id/ivPlanet"
            app:layout_constraintEnd_toEndOf="@id/ivPlanet"
            app:layout_constraintStart_toStartOf="@id/ivPlanet"
            app:srcCompat="@drawable/app_name"
            app:tint="#FDFCFD" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>